{
  "name": "react-pagimagic",
  "version": "1.4.0",
  "description": "React component to create pagination from your list",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivanzusko/react-pagimagic.git"
  },
  "author": "Ivan Zusko <ivan.zusko@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivanzusko/react-pagimagic/issues"
  },
  "homepage": "https://github.com/ivanzusko/react-pagimagic",
  "keywords": [
    "pagination",
    "react",
    "react-pagination",
    "react-pagimagic",
    "react-component",
    "npm",
    "npm-package"
  ],
  "scripts": {
    "prepublish": "npm run lint && babel --plugins transform-es2015-modules-umd src --ignore __tests__ --out-dir ./dist",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test:watch": "jest --watch --coverage",
    "test": "jest --coverage",
    "validate": "npm ls"
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "@testing-library/react": "^15.0.5",
    "babel-cli": "^6.6.4",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "eslint": "^2.7.0",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-react": "^4.2.3",
    "git-validate": "^2.2.2",
    "jest": "^20.0.4",
    "jsdom": "^8.1.0",
    "nodemon": "^1.9.1",
    "precommit-hook": "^3.0.0",
    "prop-types": "^15.5.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.js"
    }
  }
}
